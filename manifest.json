{
  "name": "Cache Cleaner",
  "short_name": "Cache Cleaner",
  "description": "Easily clear cache for the current site and optionally auto-reload with a single key press, from the popup or with the context menu.",
  "homepage_url": "https://github.com/cssnr/cache-cleaner",
  "author": "Shane",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "browsingData",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/content-script.js"]
    }
  ],
  "background": { "type": "module" },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "Show Main Popup Action"
    },
    "openOptions": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Open Options Page"
    },
    "clearSiteCache": {
      "description": "Clear Site Cache"
    },
    "clearAllSiteCache": {
      "description": "Clear All Site Cache"
    }
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "Cache Cleaner",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "96": "images/logo96.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "96": "images/logo96.png",
    "128": "images/logo128.png"
  }
}
